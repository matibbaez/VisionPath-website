---
import Container from "../shared/Container.astro";
import Spots from "../shared/Spots.astro";
---

<section class="relative mt-12 md:mt-16">
  <Container>
    <div
      class="mx-auto lg:mx-0 p-5 sm:p-6 py-6 sm:py-8 max-w-5xl rounded-3xl bg-box-bg border border-box-border shadow-lg shadow-box-shadow md:divide-x divide-box-border grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-8 md:gap-6 lg:gap-12"
    >
      <div class="text-center relative group overflow-hidden p-4 rounded-3xl transition-all duration-300">
        <div class="absolute inset-0 bg-orange-300 dark:bg-orange-400 scale-0 group-hover:scale-100 transition-transform duration-300 ease-out"></div>
        <h2 class="relative font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1">
          10+
        </h2>
        <p class="relative mt-2 text-heading-3">Created projects</p>
      </div>

      <div class="text-center relative group overflow-hidden p-4 rounded-3xl transition-all duration-300">
        <div class="absolute inset-0 bg-orange-300 dark:bg-orange-400 scale-0 group-hover:scale-100 transition-transform duration-300 ease-out"></div>
        <h2 class="relative font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1">
          30+
        </h2>
        <p class="relative mt-2 text-heading-3">Projects</p>
      </div>

      <div class="text-center relative group overflow-hidden p-4 rounded-3xl transition-all duration-300">
        <div class="absolute inset-0 bg-orange-300 dark:bg-orange-400 scale-0 group-hover:scale-100 transition-transform duration-300 ease-out"></div>
        <h2 class="relative font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1">
          40
        </h2>
        <p class="relative mt-2 text-heading-3">Happy Client</p>
      </div>

      <div class="text-center relative group overflow-hidden p-4 rounded-3xl transition-all duration-300">
        <div class="absolute inset-0 bg-orange-300 dark:bg-orange-400 scale-0 group-hover:scale-100 transition-transform duration-300 ease-out"></div>
        <h2 class="relative font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1">
          3+
        </h2>
        <p class="relative mt-2 text-heading-3">Years</p>
      </div>
    </div>
  </Container>
</section>

