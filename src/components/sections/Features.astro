---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";

import myImage from "../../assets/images/dev-with-c-1.webp";
import GradiantText from "../shared/GradiantText.astro";

type FeatureProps = {
  title: string;
};
const features = [
  {
    title: "Custom-Built Solutions",
  },
  {
    title: "SEO-Optimized",
  },
  {
    title: "High-Performance Code",
  },
  {
    title: "User-Centric Design",
  },
  {
    title: "Ongoing Support",
  },
  {
    title: "Data-Driven Strategies",
  },
  {
    title: "Cross-Platform Compatibility",
  },
  {
    title: "Branding Integration",
  },
  {
    title: "Secure Solutions",
  },
  {
    title: "Agile Development",
  },
];


export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section id="features" class=`${className}`>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto">
      <Title>
        Unlock Your Potential with <GradiantText>Essential Features</GradiantText> for Growth
      </Title>      
    </div>
    <div class="flex flex-row flex-wrap mt-8">
      <!-- <div class="flex flex-col lg:gap-10 lg:gap-12 midmd:flex-row mt-8"> -->
      <!-- <div class="flex  lg:w-1/2 flex-row"> -->
      {
        features.map((feature: FeatureProps) => {
          return (
            <div class="flex items-center text-heading-3 font-medium basis-full md:basis-1/2 lg:basis-1/3">
              <span class="font-bold rounded-full w-8 h-8 mr-3 text-primary inline-flex justify-center items-center">
                &checkmark;
              </span>
              {feature.title}
            </div>
          );
        })
      }
      <!-- </div> -->
    </div>
  </Container>
</section>
